---
import type { SupportedLanguage } from "../utils/i18n";
import "../styles/global.css";

interface Props {
    title: string;
    lang: SupportedLanguage;
}

const { title, lang } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>
