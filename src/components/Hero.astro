---
import AvatarFrame from "./AvatarFrame.astro";

interface Dictionary {
    projects: string;
    github: string;
    resume: string;
}
interface Props {
    bio: string;
    resumeUrl: string;
    githubUrl: string;
    avatarUrl?: string;
    displayName?: string;
    t: Dictionary;
}
const { bio, resumeUrl, githubUrl, avatarUrl, displayName, t } = Astro.props;
---

<section
    class="max-w-5xl mx-auto px-4 sm:px-6 pt-12 pb-24 md:pt-16 md:pb-32 w-full"
>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-16 md:gap-20 items-center">
        <!-- Left: text content -->
        <div class="flex flex-col items-start gap-12 order-2 md:order-1">
            <div class="flex flex-col gap-4">
                <p
                    class="font-mono text-xs tracking-widest"
                    style="color: var(--text-muted);"
                >
                    001 â€” intro
                </p>
                <h1
                    class="text-4xl md:text-5xl lg:text-6xl font-black tracking-tight leading-[1.08] text-balance"
                    style="color: var(--text-primary);"
                >
                    {bio}
                </h1>
            </div>

            <div class="flex flex-col sm:flex-row gap-3 w-full sm:w-auto">
                <a
                    href="#proyectos"
                    class="inline-flex justify-center items-center px-6 py-4 sm:py-3 w-full sm:w-auto font-mono text-xs font-bold tracking-widest transition-all duration-200 hover:bg-transparent hover:text-(--text-primary)"
                    style="background: var(--text-primary); color: var(--bg-primary); border: 1px solid var(--text-primary);"
                >
                    {t.projects}
                </a>
                <a
                    href={githubUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex justify-center items-center px-6 py-4 sm:py-3 w-full sm:w-auto font-mono text-xs font-bold tracking-widest transition-all duration-200 hover:border-(--text-secondary) hover:text-(--text-primary)"
                    style="background: transparent; color: var(--text-secondary); border: 1px solid var(--border-default);"
                >
                    {t.github}
                </a>
                <a
                    href={resumeUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex justify-center items-center px-6 py-4 sm:py-3 w-full sm:w-auto font-mono text-xs font-bold tracking-widest transition-all duration-200 hover:border-(--text-secondary) hover:text-(--text-primary)"
                    style="background: transparent; color: var(--text-secondary); border: 1px solid var(--border-default);"
                >
                    {t.resume}
                </a>
            </div>
        </div>

        <!-- Right: avatar (only renders if avatarUrl exists) -->
        {
            avatarUrl && (
                <div class="order-1 md:order-2 flex justify-center md:justify-end">
                    <AvatarFrame src={avatarUrl} name={displayName} />
                </div>
            )
        }
    </div>
</section>
