---
import type { SupportedLanguage } from "../utils/i18n";
interface Props {
    lang: SupportedLanguage;
}
const { lang } = Astro.props;
---

<header
    style="border-bottom: 1px solid var(--border-subtle); background: var(--bg-primary);"
    class="w-full sticky top-0 z-50"
>
    <div
        class="max-w-5xl mx-auto px-4 sm:px-6 py-4 flex justify-between items-center"
    >
        <div class="flex items-center gap-2">
            <span
                class="font-mono text-xs tracking-widest"
                style="color: var(--text-secondary);"
            >
                echo-whoami
            </span>
            <div
                class="w-1.5 h-1.5 rounded-full animate-pulse"
                style="background-color: #ff4444;"
            >
            </div>
        </div>

        <nav class="flex items-center gap-1 font-mono text-xs">
            <a
                href="/"
                class:list={[
                    "px-3 py-3 sm:py-1 tracking-widest transition-colors duration-200 hover:text-(var(--text-primary))",
                    lang === "en"
                        ? "text-(var(--text-primary))"
                        : "text-neutral-400",
                ]}
            >
                EN
            </a>
            <span style="color: var(--border-default);">Â·</span>
            <a
                href="/es"
                class:list={[
                    "px-3 py-3 sm:py-1 tracking-widest transition-colors duration-200 hover:text-(var(--text-primary))",
                    lang === "es"
                        ? "text-(var(--text-primary))"
                        : "text-neutral-400",
                ]}
            >
                ES
            </a>
        </nav>
    </div>
</header>
