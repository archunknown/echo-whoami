---
interface Props {
    project: any;
    t: {
        problem: string;
        architecture: string;
        outcome: string;
        privateRepo: string;
        [key: string]: string;
    };
}
const { project, t } = Astro.props;
---

<article
    class="flex flex-col reveal-hidden"
    style="background: var(--bg-card); border: 1px solid var(--border-subtle); border-radius: 2px;"
>
    {
        project.cover_image_url && (
            <div
                class="max-h-48 sm:max-h-none"
                style="border-bottom: 1px solid var(--border-subtle); overflow: hidden; aspect-ratio: 16/9;"
            >
                <img
                    src={project.cover_image_url}
                    alt={project.title}
                    class="w-full h-full object-cover transition-transform duration-600 ease-in-out hover:scale-105 hover:grayscale-0 grayscale-20"
                    loading="lazy"
                />
            </div>
        )
    }

    <div class="flex flex-col gap-6 p-7 grow">
        <!-- Header -->
        <div class="flex flex-col gap-3">
            <h3
                class="text-xl font-black tracking-tight leading-snug"
                style="color: var(--text-primary);"
            >
                {project.title}
            </h3>
            <div class="flex flex-wrap gap-2">
                {
                    project.project_technologies?.map((pt: any) => {
                        const tech = pt.technologies;
                        if (!tech) return null;
                        return (
                            <span
                                class="font-mono text-xs px-2 py-0.5"
                                style="color: var(--text-secondary); border: 1px solid var(--border-default);"
                            >
                                {tech.name}
                            </span>
                        );
                    })
                }
            </div>
        </div>

        <!-- Summary -->
        <p
            class="text-sm leading-relaxed"
            style="color: var(--text-secondary);"
        >
            {project.summary}
        </p>

        <!-- Details -->
        <div class="flex flex-col gap-5">
            {
                project.problem && (
                    <div>
                        <p
                            class="font-mono text-xs tracking-widest mb-1"
                            style="color: var(--text-muted);"
                        >
                            {t.problem}
                        </p>
                        <p
                            class="text-sm leading-relaxed"
                            style="color: var(--text-secondary);"
                        >
                            {project.problem}
                        </p>
                    </div>
                )
            }
            {
                project.architecture && (
                    <div>
                        <p
                            class="font-mono text-xs tracking-widest mb-1"
                            style="color: var(--text-muted);"
                        >
                            {t.architecture}
                        </p>
                        <p
                            class="text-sm leading-relaxed"
                            style="color: var(--text-secondary);"
                        >
                            {project.architecture}
                        </p>
                    </div>
                )
            }
            {
                project.outcome && (
                    <div>
                        <p
                            class="font-mono text-xs tracking-widest mb-1"
                            style="color: var(--text-muted);"
                        >
                            {t.outcome}
                        </p>
                        <p
                            class="text-sm leading-relaxed"
                            style="color: var(--text-secondary);"
                        >
                            {project.outcome}
                        </p>
                    </div>
                )
            }
        </div>

        <!-- Metrics -->
        {
            project.metrics &&
                typeof project.metrics === "object" &&
                Object.keys(project.metrics).length > 0 && (
                    <div
                        class="grid grid-cols-2 lg:grid-cols-3 gap-5 py-5"
                        style="border-top: 1px solid var(--border-subtle);"
                    >
                        {Object.entries(project.metrics).map(
                            ([key, value], index, array) => (
                                <div
                                    class:list={[
                                        "flex flex-col gap-1",
                                        {
                                            "col-span-2 lg:col-span-1":
                                                array.length % 2 !== 0 &&
                                                index === array.length - 1,
                                        },
                                    ]}
                                >
                                    <span
                                        class="text-2xl font-black"
                                        style="color: var(--text-primary);"
                                    >
                                        {String(value)}
                                    </span>
                                    <span
                                        class="font-mono text-xs tracking-widest"
                                        style="color: var(--text-muted);"
                                    >
                                        {key.replace(/_/g, " ")}
                                    </span>
                                </div>
                            )
                        )}
                    </div>
                )
        }

        <!-- Footer links -->
        <div
            class="mt-auto pt-5 flex flex-wrap gap-5 items-center"
            style="border-top: 1px solid var(--border-subtle);"
        >
            {
                project.is_private === false ? (
                    <>
                        {project.demo_url && (
                            <a
                                href={project.demo_url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="font-mono text-xs tracking-widest transition-colors duration-200 hover:text-(--text-primary)"
                                style="color: var(--text-secondary);"
                            >
                                demo ↗
                            </a>
                        )}
                        {project.prod_url && (
                            <a
                                href={project.prod_url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="font-mono text-xs tracking-widest transition-colors duration-200 hover:text-(--text-primary)"
                                style="color: var(--text-secondary);"
                            >
                                prod ↗
                            </a>
                        )}
                        {project.repo_url && (
                            <a
                                href={project.repo_url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="font-mono text-xs tracking-widest transition-colors duration-200 hover:text-(--text-primary)"
                                style="color: var(--text-secondary);"
                            >
                                repo ↗
                            </a>
                        )}
                    </>
                ) : (
                    <span
                        class="font-mono text-xs tracking-widest"
                        style="color: var(--text-muted);"
                    >
                        {t.privateRepo}
                    </span>
                )
            }
        </div>
    </div>
</article>
